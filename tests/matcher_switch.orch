timeout(1)
matcher("plain")

-- What we write to cat(1) should come straight back to us.
write "Hello\r"

local ok = false
fail(function()
	ok = true
end)

match "H.llo"

fail(nil)

enqueue(function()
	if not ok then
		exit(1)
	end
end)

matcher("default")
match "H.llo"
